<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>To do</title>
</head>
<body>
  <h1 class="text-center">My TO-DOs</h1>

  <%- include('_navbar') %>
  
  <div class="container">
    <% let weekday = new Array(7) %>
    <% weekday[0] = "Domenica"; %>
    <% weekday[1] = "Lunedi"; %>
    <% weekday[2] = "Martedi"; %>
    <% weekday[3] = "Mercoledi"; %>
    <% weekday[4] = "Giovedi"; %>
    <% weekday[5] = "Venerdi"; %>
    <% weekday[6] = "Sabato"; %>

    <% function convertDate(dateString) { %>
    <%   var date = new Date(dateString) %>
    <%   return weekday[date.getDay()] + ", " + date.getDate()+"/"+(date.getMonth() + 1)+"/"+date.getFullYear(); %>
    <% } %>

    <% days.forEach(day => { %>
      <div class="card">
        <div class="card-body">
          <!-- Day of the week -->
          <h3><%= convertDate(day.day) %></h2>
          <!-- Tasks of the day -->
          <div class="card-body">
            <h5>Tasks</h5>
            <ul>
              <% if(day.task1 != "") {%>
                <li><%= day.task1 %></li>
              <% } %>
              <% if(day.task2 != "") {%>
                <li><%= day.task2 %></li>
              <% } %>
              <% if(day.task3 != "") {%>
                <li><%= day.task3 %></li>
              <% } %>
              <% if(day.task4 != "") {%>
                <li><%= day.task4 %></li>
              <% } %>
              <% if(day.task5 != "") {%>
                <li><%= day.task5 %></li>
              <% } %>
              <% if(day.task6 != "") {%>
                <li><%= day.task6 %></li>
              <% } %>
              <% if(day.task7 != "") {%>
                <li><%= day.task7 %></li>
              <% } %>
              <% if(day.task8 != "") {%>
                <li><%= day.task8 %></li>
              <% } %>
              <% if(day.task9 != "") {%>
                <li><%= day.task9 %></li>
              <% } %>
              <% if(day.task10 != "") {%>
                <li><%= day.task10 %></li>
              <% } %>
            </ul>
              <form action="/todo/<%= day.id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger d-inline">DELETE DAY</button>
                <!-- edit button -->
                <a href="/todo/edit/<%= day.id %>" class="btn btn-info d-inline">Edit day</a>
              </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

</body>
</html>
