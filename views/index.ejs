<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>To do</title>
</head>
<body>
  <h1 class="text-center">My TO-DOs</h1>

  <!-- Main navbar -->
  <div class="text-center">
    <nav class="navbar navbar-nav d-inline ">
      <a href="/todo/new_day" class="btn btn-info">Add new day</a>
      <a class="btn btn-success">Today</a>
      <a class="btn btn-success">Tomorrow</a>
      <a class="btn btn-success">Current week</a>
      <a class="btn btn-success">Search day</a>
    </nav>
  </div>

    <div class="container">
      <% let weekday = new Array(7) %>
      <% weekday[0] = "Domenica"; %>
      <% weekday[1] = "Lunedi"; %>
      <% weekday[2] = "Martedi"; %>
      <% weekday[3] = "Mercoledi"; %>
      <% weekday[4] = "Giovedi"; %>
      <% weekday[5] = "Venerdi"; %>
      <% weekday[6] = "Sabato"; %>

      <% function convertDate(dateString) { %>
      <%   var date = new Date(dateString) %>
      <%   return weekday[date.getDay()] + ", " + date.getDate()+"/"+(date.getMonth() + 1)+"/"+date.getFullYear(); %>
      <% } %>

      <% days.forEach(day => { %>
        <div class="card">
          <div class="card-body">
            <!-- Day of the week -->
            <h3><%= convertDate(day.day) %></h2>
            <!-- Tasks of the day -->
            <div class="card-body">
              <h5>Tasks</h5>
              <ul>
                <li><%= day.task %></li>
              </ul>
          </div>
          </div>
        </div>
      <% }) %>

    </div>

</body>
</html>
