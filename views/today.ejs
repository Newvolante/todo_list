<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>Today</title>
</head>

<body>
  <h1 class="text-center">My TO-DOs</h1>

  <%- include('_navbar') %>

  <div class="container">
    <% let weekday = new Array(7) %>
    <% weekday[0] = "Domenica"; %>
    <% weekday[1] = "Lunedi"; %>
    <% weekday[2] = "Martedi"; %>
    <% weekday[3] = "Mercoledi"; %>
    <% weekday[4] = "Giovedi"; %>
    <% weekday[5] = "Venerdi"; %>
    <% weekday[6] = "Sabato"; %>

    <% function convertDate(dateString) { %>
    <%   var date = new Date(dateString) %>
    <%   return weekday[date.getDay()] + ", " + date.getDate()+"/"+(date.getMonth() + 1)+"/"+date.getFullYear(); %>
    <% } %>

    <div class="card">
      <div class="card/body">
        <% let today = new Date().toLocaleDateString() %>
        <h3><%= convertDate(today) %></h3>
        <div class="card-body">
          <h5>Tasks</h5>
          <ul>
            <li><%= matchDay[0].task1 %></li>
            <li><%= matchDay[0].task2 %></li>
            <li><%= matchDay[0].task3 %></li>
            <li><%= matchDay[0].task4 %></li>
            <li><%= matchDay[0].task5 %></li>
            <li><%= matchDay[0].task6 %></li>
            <li><%= matchDay[0].task7 %></li>
            <li><%= matchDay[0].task8 %></li>
            <li><%= matchDay[0].task9 %></li>
            <li><%= matchDay[0].task10 %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</body>

</html>