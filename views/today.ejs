<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>Today</title>
</head>
<body>
  <h1 class="text-center">My TO-DOs</h1>

  <%- include('_navbar') %>

  <% let weekday = new Array(7) %>
  <% weekday[0] = "Domenica"; %>
  <% weekday[1] = "Lunedi"; %>
  <% weekday[2] = "Martedi"; %>
  <% weekday[3] = "Mercoledi"; %>
  <% weekday[4] = "Giovedi"; %>
  <% weekday[5] = "Venerdi"; %>
  <% weekday[6] = "Sabato"; %>

  <% function convertDate(dateString) { %>
    <%   var date = new Date(dateString) %>
    <%   return weekday[date.getDay()] + ", " + date.getDate()+"/"+(date.getMonth() + 1)+"/"+date.getFullYear(); %>
  <% } %>

  <% let today = new Date().toLocaleDateString() %>
  <div class="container">
    <div class="card">
      <div class="card/body">
        <h2><%= convertDate(today) %></h2>
        <ul>
          <li>Task 1: <%= matchDay[0].task1 %></li>
          <li>Task 2: <%= matchDay[0].task2 %></li>
          <li>Task 3: <%= matchDay[0].task3 %></li>
          <li>Task 4: <%= matchDay[0].task4 %></li>
          <li>Task 5: <%= matchDay[0].task5 %></li>
          <li>Task 6: <%= matchDay[0].task6 %></li>
          <li>Task 7: <%= matchDay[0].task7 %></li>
          <li>Task 8: <%= matchDay[0].task8 %></li>
          <li>Task 9: <%= matchDay[0].task9 %></li>
          <li>Task 10: <%= matchDay[0].task10 %></li>
        </ul>
      </div>
    </div>
  </div>
</body>
</html>